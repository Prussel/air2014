<!DOCTYPE html>
<html>
<head>
  <title>Airbnb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<header>
		<h1>
			<%= link_to "AirBnb", root_path %>
		</h1>

		<nav>

			<!-- this is where we are finding out if the user is logged in or now -->
			<!-- we have defined the current_user in the applications controller -->

			<% if current_user.present? %>
				<%= current_user.name %>
				<%= link_to "Log Out", session_path, method: :delete %>

			<% else %>
				<%= link_to "Sign In", new_session_path %>
				<%= link_to "Sign Up", new_user_path %>

			<% end %>
			
		</nav>
		
	</header>

<% if flash[:success].present? %>
	<div class="success">
		<%=flash[:success] %>
	</div>
<% end %>

<% if flash[:error].present? %>
	<div class="error">
		<%=flash[:error] %>
	</div>
<% end %>

<%= yield %>

</body>
</html>
