<h2> The signup form </h2>

<%= simple_form_for @user do |form| %>

	<%= form.input :name %>
	<%= form.input :username %>
	<%= form.input :email %>
	<%= form.input :password %>
	<%= form.input :password_confirmation %>

	<%= form.button :submit %>


<% end %>	

<p>
	<%= link_to "Sign up with Facebook", "/auth/facebook" %>
	<%= link_to "Sign up with Twitter", "/auth/twitter" %>
	<%= link_to "Sign up with Linkedin", "/auth/linkedin" %>
</p>